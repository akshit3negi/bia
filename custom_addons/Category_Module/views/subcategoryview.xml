<odoo>

<!-- Subcategory Views -->
    <record id="view_subcategory_tree" model="ir.ui.view">
        <field name="name">subcategory.tree</field>
        <field name="model">mymodule.subcategory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="status"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="view_subcategory_form" model="ir.ui.view">
        <field name="name">subcategory.form</field>
        <field name="model">mymodule.subcategory</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="category_id"/>
                </group>
            </form>
        </field>
    </record>
</odoo>