<odoo>
    <record id="view_users_tree" model="ir.ui.view">
        <field name="name">users.tree</field>
        <field name="model">users.custom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="email" />
                <field name="password" />
                <field name="status" />
                <field name="role" />
                <field name="userpic" widget="image" options="{'size': [100, 100]}"/>
            </tree>
        </field>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name='name'>users.form</field>
        <field name="model">users.custom</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="email" />
                    <field name="password" />
                    <field name="status" />
                    <field name="role" />
                    <field name="userpic" widget="image" options="{'size': [100, 100]}"/>
                </group>
            </form>
        </field>
    </record>
</odoo>